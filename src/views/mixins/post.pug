mixin post(info)
    a(href=`/postings/${info.id}`)
        div 
            each imgUrl in info.imgsUrl
                img(src="/"+imgUrl, height="100px")
        div 
            button ‚ù§
        div 
            span #{info.meta.likes} likes
        div 
            span=info.owner.username
            span  #{info.caption}
        div 
            if !info.updatedAt
                span=info.createdAt
            else 
                span updated at #{info.updatedAt}
        div 
            span (dev mode hashtags)
            if info.hashtags 
                each hashtag in info.hashtags 
                    span=hashtag
        hr